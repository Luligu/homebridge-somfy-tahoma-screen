{
  "private": true,
  "displayName": "Somfy TaHoma Screen",
  "name": "homebridge-somfy-tahoma-screen",
  "version": "1.0.6",
  "description": "Somfy TaHoma stateless screens plugin",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luligu/homebridge-somfy-tahoma-screen"
  },
  "bugs": {
    "url": "https://github.com/Luligu/homebridge-somfy-tahoma-screen/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.7.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run cleanBuild && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "clean": "rimraf ./dist",
    "cleanBuild": "rimraf tsconfig.tsbuildinfo ./dist && tsc",
    "deepClean": "rimraf tsconfig.tsbuildinfo package-lock.json ./dist ./node_modules",
    "prepublishOnly": "npm run lint && npm run cleanBuild",
    "checkDependencies": "npx npm-check-updates",
    "updateDependencies": "npx npm-check-updates -u"
  },
  "keywords": [
    "homebridge-plugin",
    "Somfy",
    "TaHoma",
    "Screen",
    "Cover",
    "Blind"
  ],
  "dependencies": {
    "node-storage-manager": "file:../node-storage-manager",
    "overkiz-client": "^1.0.18"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/node-persist": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "homebridge": "^1.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
